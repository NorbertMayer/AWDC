@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.HomePage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}


<div class="row">
    <div class="hero">
        <div class="content">
             <h1 class="text-center">Aarhus Web Dev Coop</h1>
                <p class="text-center">
                @Umbraco.Field("mainContent") 
            </p>
        </div>
    </div>
    
    
</div>
<div class="row">
    <h2>Newest articles</h2>
    <div class="article">
     @Umbraco.RenderMacro("ArticlesList", new {nrOfArticles="3"})
    </div>
</div>
<!-- Render last two projects-->
<div class="row">
    <h2>Newest projects</h2>
    <div class="article">
     @Umbraco.RenderMacro("NewestProjects", new {nrOfProjects="2"})
    </div>
</div>
<div class="row members">
    <div class="col-md-6">
        <h3>Active members list:</h3>
        @Html.Partial("Members/ActiveMembers")
    </div>
    <div class="col-md-6">
        <h3>Prospect members list:</h3>
        @Html.Partial("Members/ProspectMembers")
    </div>
</div>